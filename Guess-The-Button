<p i = "demo"> </p>
  <script>
function Winner(a) {
	let x = Math.floor(Math.random()* 3 + 1);
    for(let i  = 1; i <= a; ++i){
    if( i == x){
    return alert ("Button " + i + " won");
    	}
    }
}
document.getElementById("demo").innerHTML = window.Winner(3); 
</script>
    <style>
      .center {
        display: flex;
        justify-content: center;
        align-items: center;
      }
    </style>
